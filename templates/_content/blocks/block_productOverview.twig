<div class="{{ blockClass }}">
    <div class="container">
        {% if block.headline %}
            <div class="block-headline">
                {{ block.headline }}
            </div>
        {% endif %}

        {% if block.productsAndSites.exists() %}
            <div class="text-center pt-12">
                <div class="inline-grid gap-12
                            grid-cols-2
                            lg:grid-cols-3">
                    {% for item in block.productsAndSites.all() %}
                        {% set itemIcon = item.icon.one() %}
                        {% set itemTitle = item.teaserHeadline|default(item.title) %}

                        <div class="{#text-center#}">

                            <img class="w-40 mx-auto"
                                 src="{{ itemIcon.url|default('/assets/img/placeholder/icon.png') }}"
                                 alt="{{ itemTitle }}">

                            <div class="text-lg text-blue my-4">
                                {{ itemTitle }}
                            </div>

                            {% include '_partials/button' with {
                                'link': item.url,
                                'text': 'weiterlesen'|t
                            } %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>
</div>